# generated by gemini-2.0
#!/bin/bash
# Check if running inside WSL
if grep -q WSL /proc/version; then
  # Convert WSL path to Windows path
  wslpath=$(wslpath -w "$1")
  # Open with explorer.exe (be careful with spaces)
  #cmd.exe /C start "$(echo "$wslpath" | sed 's/\\/\\\\/g')"
  cmd.exe /C start "$1"
else
  # If not in WSL, use the original xdg-open
  /usr/bin/xdg-open "$1" # Or wherever the real xdg-open is
fi
